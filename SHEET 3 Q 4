//sheet 3 Q 4
#include <iostream>
using namespace std;
class List{
private:
    int A[30];
    int n;
public:
    void read(){
    do{
        cout<<"Enter the number elements (n<=30) : ";
        cin>>n;
    }while(n<=0||n>30);
    cout<<"Enter elements of A[n] : \n";
    for(int i=0;i<n;i++){
        cout<<"A["<<i<<"] = ";
        cin>>A[i];
    }}
    void Bubble_sort(){
        for(int j=1;j<=n;j++){
            for(int i=0;i<n-1;i++){
                if(A[i]>A[i+1])
                    swap(A[i],A[i+1]);
            }
        }
    }
    bool binary_search(int key) {
    int low = 0, high = n - 1;
    while (low <= high) {
        int mid = (low + high) / 2;
        if (A[mid] == key)
            return 1;
        else if (A[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;}
        return 0;}
    long sum(){
        long s=0;
        for(int i=0;i<n;i++){
            s+=A[i];
        }
        return s;
    }
    double average(){
        double s=0;
        for(int i=0;i<n;i++){
            s+=A[i];
        }
        return s/n;
    }
    bool compare1(List A){
        return sum()>A.sum();
    }
    bool compare2(List A){
        return average()>A.average();
    }
    void display(){
        cout<<"The number of elements = "<<n<<endl;
        cout<<"\tIndex\t\t|\tA[n]\n";
        cout<<"----------------------------------------------------------------\n";
        for(int i=0;i<n;i++){
        cout<<"\t"<<i<<"\t\t|\t"<<A[i]<<endl;
        }
        cout<<"----------------------------------------------------------------\n";
    }
};
int main(){
    List A,B;
    cout<<"Enter things of element 1 : \n";
    A.read();
    A.Bubble_sort();
    int x;
    cout<<"Enter things of element 2 : \n";
    B.read();
    B.Bubble_sort();
    cout << "Enter a number to search in object 1: ";
    cin >> x;
    cout<<"==================================================OUTPUT==============================================\n";
    if (A.binary_search(x))
    cout << x << " found in object 1.\n";
    else
    cout << x << " not found in object 1.\n";
    if(A.compare1(B)){
        cout<<"The object 1 is max : \n";
        A.display();
    }
    else{
        cout<<"The object 2 is max : \n";
        B.display();
    }
    if(A.compare2(B)){
        cout<<"object 1 has max average : \n";
        A.display();
    }
    else{
        cout<<"object 2 has max average : \n";
        B.display();
    }
return 0;
}
