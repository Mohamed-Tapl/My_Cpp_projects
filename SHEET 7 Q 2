//sheet 7 Q2
#include<iostream>
#include<string>
#include<cmath>
using namespace std;
class Data1{
	string S1;
	double D1[20];
	int a;
	int n;
public:
	void read(){
		cout<<"Enter S1 : ";
		cin>>S1;
		do{
			cout<<"Enter the number of elements of D1 (n=<20) : ";
			cin>>n;
		}while(n<0||n>20);
		cout<<"Enter D1 : \n";
		for(int i=0;i<n;i++){
			cout<<"D1["<<i<<"] = ";
			cin>>D1[i];
		}
		cout<<"Enter a : ";
		cin>>a;
	}
	double sum(){
		double sum1=0;
		for(int i=0;i<n;i++){
			for(int j=i;j<=i+1;j++){
				if(int(D1[i]) % a==0)
					sum1+=pow(D1[i],2*(j+1));
				else
				sum1+=pow(D1[i],j+1);
			}}
	return sum1;
	}
	void display(){
		cout<<"S1 : "<<S1<<endl;
		cout<<"n = "<<n<<endl;
		cout<<"D1 : \n";
		for(int i=0;i<n;i++){
			cout<<"D1["<<i<<"] = ";
			cout<<D1[i]<<endl;
		}
		cout<<"element a = "<<a<<endl;
	}
};
class Data2{
	string S2;
	double D2[20];
	int b;
	int m;
public:
	void read(){
		cout<<"Enter S2 : ";
		cin>>S2;
		do{
			cout<<"Enter the number of elements of D2 (m=<20) : ";
			cin>>m;
		}while(m<0||m>20);
		cout<<"Enter D2 : \n";
		for(int i=0;i<m;i++){
			cout<<"D2["<<i<<"] = ";
			cin>>D2[i];
		}
		cout<<"Enter b : ";
		cin>>b;
	}
	double sum(){
		double sum2=0;
		for(int i=0;i<m;i++){
			for(int j=i;j<=i+1;j++){
				if(D2[i]>b)
					sum2+=pow(D2[i],2*(j+1));
				else
				sum2+=pow(D2[i],j+1);
			}}
	return sum2;
	}
	void display(){
		cout<<"S2 : "<<S2<<endl;
		cout<<"m = "<<m<<endl;
		cout<<"D2 : \n";
		for(int i=0;i<m;i++){
			cout<<"D2["<<i<<"] = "<<D2[i]<<endl;
		}
		cout<<"b = "<<b<<endl;
	}
};
class Data : public Data1 , public Data2{
	string ND;
	int T_sum;
public:
	void setT_sum(){
		T_sum = Data1::sum()+Data2::sum();
	}
	void read(){
		cout<<"Enter ND : ";
		cin>>ND;
		cout<<"Enter data for Data 1 : \n";
		Data1::read();
		cout<<"Enter data for Data 2 : \n";
		Data2::read();
		setT_sum();
	}
	void display(){
		cout<<"ND : "<<ND<<endl;
		cout<<"T_sum = "<<T_sum<<endl;
		cout<<"Data of class Data 1 : \n";
		Data1::display();
		cout<<"Data of class Data 2 : \n";
		Data2::display();
	}
};
int main(){
	Data D[10];
	int n;
	do{
		cout<<"Enter number of Data (n<=10) : ";
		cin>>n;
	}while(n<0||n>10);
	for(int i=0;i<n;i++){
		cout<<"Enter Data for object "<<i+1<<" : \n";
		D[i].read();
	}
	cout<<"========================OUTPUT===============================\n";
	for(int i=0;i<n;i++){
		cout<<"Data of object "<<i+1<<" : \n";
		D[i].display();
	}
system("pause");
return 0;
}
